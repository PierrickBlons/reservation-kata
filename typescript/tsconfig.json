{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["vitest/globals"],
    "noEmit": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["vitest.config.ts"],
  "exclude": ["node_modules"]
}
